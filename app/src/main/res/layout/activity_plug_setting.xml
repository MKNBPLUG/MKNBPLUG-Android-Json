<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue_0188cc">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onBack"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Settings"
            android:textColor="@color/white_ffffff"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="onEditName"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/edit_name" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_f2f2f2"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onModifyPowerStatus">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Power On Default Mode"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />

                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onPeriodReportClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Period Reporting"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />

                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onPowerReportSettingClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Power Report Setting"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onEnergyStorageReportClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Energy Storage and Report"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onConnTimeoutSettingClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Connection Timeout Setting"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onSystemTimeClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="System Time"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onProtectionSwitchClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Protection Switch"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onNotificationSwitchClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Notification Switch"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />

                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onIndicatorSettingClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Indicator Setting"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />

                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Switch by button"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_button_control"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:onClick="onButtonControlEnable"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:src="@drawable/checkbox_open" />

                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <View
                style="@style/divider_line"
                android:layout_height="12dp"
                android:background="@color/transparent" />

            <RelativeLayout
                android:id="@+id/rl_modify_network"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onModifyNetworkMQTTClick"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Modify Network and MQTT"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_ota"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onOTA"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="OTA"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onMQTTSettingForDevice">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="MQTT Settings for Device"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onDeviceInfo">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Device Information"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_debug_mode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onDebugModeClick"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:text="Debug Mode"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/shape_corner_btn_bg"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onRemove"
                android:text="Remove Device"
                android:textColor="@color/white_ffffff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/shape_corner_btn_bg"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onReset"
                android:text="Reset"
                android:textColor="@color/white_ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>